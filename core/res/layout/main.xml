<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/speedSelectionLinearLayout">
        <EditText android:layout_height="wrap_content" android:id="@+id/editSpeedText" android:inputType="number|numberDecimal" android:layout_width="200dip" android:text="0"></EditText>
        <Spinner android:layout_height="wrap_content" android:id="@+id/unitSpinner" android:layout_width="fill_parent"></Spinner>
    </LinearLayout>
    <ListView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/listView"></ListView>
</LinearLayout>
